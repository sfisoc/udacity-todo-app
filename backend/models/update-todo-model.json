{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "group",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "\\w"
    },
    "dueDate": {
      "type": "string",
      "pattern":"^\\d{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])$"
    },
    "done": {
      "type": "boolean"
    }
  },
  "required": [
    "name",
    "dueDate",
    "done"
  ],
  "additionalProperties": false
}
